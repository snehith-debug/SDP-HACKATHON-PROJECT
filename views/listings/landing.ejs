    <style>
        .landing-container {
    min-height: 100vh;
    overflow-x: hidden;
}

.hero-section {
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, #2c3e50, #3498db);
    color: white;
}

.main-title {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    animation: fadeInDown 1s ease-out;
}

.subtitle {
    font-size: 1.5rem;
    opacity: 0.9;
    animation: fadeInUp 1s ease-out;
}

/* Image Carousel */
.image-carousel {
    width: 100%;
    height: 400px;
    overflow: hidden;
    position: relative;
}

.carousel-track {
    display: flex;
    animation: scroll 20s linear infinite;
}

.carousel-track img {
    width: 300px;
    height: 400px;
    object-fit: cover;
    margin: 0 10px;
}

/* Features Section */
.intro-section {
    padding: 4rem 2rem;
    text-align: center;
}

.features {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 2rem;
}

.feature {
    flex: 1;
    max-width: 300px;
    padding: 2rem;
    border-radius: 10px;
    background: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
}

.feature:hover {
    transform: translateY(-10px);
}

.feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

/* CTA Section */
.cta-section {
    text-align: center;
    padding: 4rem 2rem;
    background: #f8f9fa;
}

.get-started-btn {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 1.2rem;
    background: #2c3e50;
    color: white;
    border-radius: 30px;
    text-decoration: none;
    transition: transform 0.3s ease, background-color 0.3s ease;
}

.get-started-btn:hover {
    transform: translateY(-3px);
    background: #34495e;
}

/* Animations */
@keyframes scroll {
    0% {
        transform: translateX(0);
    }
    100% {
        transform: translateX(-50%);
    }
}

@keyframes fadeInDown {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
    </style>
</head>
