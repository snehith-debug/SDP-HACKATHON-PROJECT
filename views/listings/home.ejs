<!DOCTYPE html>
<html>
<head>
    <title>EventHub - Home</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
         .admin-login-btn {
            background: #2c3e50;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            transition: all 0.3s ease;
            margin-left: 10px;
        }

        .admin-login-btn:hover {
            background: #34495e;
            color: white;
            transform: translateY(-2px);
        }

        .auth-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <% layout("/layouts/boilerplate") %>
    
    <div class="event-showcase">
        <!-- Auth Buttons - Only show if user is not logged in -->
        <% if (!currUser) { %>
            <div class="auth-buttons">
                <a href="/login" class="btn login-btn">Login</a>
                <a href="/signup" class="btn signup-btn">Sign Up</a>
                <a href="/login" class="admin-login-btn">Admin Login</a>
            </div>
        <% } else { %>
            <div class="user-welcome">
                <p>Welcome, <%= currUser.username %>!</p>
                <% if (currUser.isAdmin) { %>
                    <a href="/admin/dashboard" class="btn logout-btn">Admin Dashboard</a>
                <% } %>
                <a href="/logout" class="btn logout-btn">Logout</a>
            </div>
        <% } %>
    
        <!-- Genre Cards -->
        <h2 class="section-title">Explore Events by Category</h2>
        <div class="genre-grid">
            <a href="/index" class="genre-card">
                <div class="genre-icon">üñ•Ô∏è</div>
                <h3>Technology</h3>
                <p>Conferences, Workshops, Hackathons</p>
            </a>

            <a href="/events/music" class="genre-card">
                <div class="genre-icon">üéµ</div>
                <h3>Music</h3>
                <p>Concerts, Festivals, Live Shows</p>
            </a>

            <a href="/events/food" class="genre-card">
                <div class="genre-icon">üçΩÔ∏è</div>
                <h3>Food & Drinks</h3>
                <p>Food Festivals, Wine Tasting, Culinary Events</p>
            </a>

            <a href="/events/sports" class="genre-card">
                <div class="genre-icon">‚öΩ</div>
                <h3>Sports</h3>
                <p>Tournaments, Matches, Athletic Events</p>
            </a>

            <a href="/events/arts" class="genre-card">
                <div class="genre-icon">üé®</div>
                <h3>Arts & Culture</h3>
                <p>Exhibitions, Theater, Cultural Festivals</p>
            </a>

            <a href="/events/business" class="genre-card">
                <div class="genre-icon">üíº</div>
                <h3>Business</h3>
                <p>Networking, Seminars, Trade Shows</p>
            </a>
        </div>
    </div>
</body>
</html>