        <div class="floating-icon">ðŸŽµ</div>
        <div class="floating-icon">ðŸŽª</div>
    </div>

    <div class="main-content">
        <h3 class="slide-in">OnGoing Events</h3>    
        
        <div class="new-button-container">
            <a href="/new" class="new-event-btn">
                <span class="btn-icon">+</span>
                <span class="btn-text">New Event</span>
            </a>
        </div>

        <section id="about" class="about">
            <div class="row">
                <% for(let list of allListing){ %>
                    <a href="/get/<%= list._id %>" class="listing-link">
                        <div class="card hover-shadow hover-scale glass-effect">
                            <div class="card-body">
                                <div class="card-text">
                                    <h5><b><i><%= list.title %></i></b></h5>
                                    <h6><i><%= list.description %></i></h6>
                                </div>
                            </div>
                        </div>
